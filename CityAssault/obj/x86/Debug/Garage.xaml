<Page x:ConnectionId='1'
    x:Class="CityAssault.Garage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CityAssault"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!--#region Definitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition />
            <ColumnDefinition Width="30"/>
            <ColumnDefinition />
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <!--#endregion-->

        <!--#region Boton atras -->
        <Button x:ConnectionId='2' x:Name="BackButton" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10, 10, 0, 0"
                 Height="45" Width="45"                BorderBrush="Black" BorderThickness="2" Background="Gray"
                    Grid.Row="0" Grid.ColumnSpan="2">

            <Image Source="Assets/atras.png" VerticalAlignment="Center" HorizontalAlignment="Center"
                 Height="25" Width="25" />
        </Button>
        <!--#endregion-->

        <!--#region Taller -->
        <TextBlock Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3" x:Uid="Garage2" Text="" VerticalAlignment="Center"
                   HorizontalAlignment="Center" FontSize="40"/>
        <!--#endregion-->

        <!--#region Tanque y guardados-->
        <Grid Grid.Row="1" Grid.Column="1">
            <!--#region Definitions -->
            <Grid.RowDefinitions>
                <RowDefinition Height ="2.5*"/>
                <RowDefinition Height ="5"/>
                <RowDefinition Height ="20"/>
                <RowDefinition Height ="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <!--#endregion-->

            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" Background="#FF75DBA3" BorderBrush="DarkGreen"
                    BorderThickness="2"></Border>

            <!--#region Tanque-->
            <Grid Grid.Column="1">
                <!--#region Definitions -->
                <Grid.RowDefinitions>
                    <RowDefinition Height ="2*"/>
                    <RowDefinition Height ="2.5*"/>
                    <RowDefinition Height ="3*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <!--#endregion-->

                <Border Grid.Row="0" Grid.Column="2" Background="#FF75B6DB" BorderBrush="DarkCyan" BorderThickness="2"></Border>

                <TextBlock x:ConnectionId='15' x:Name="Habilidad" x:Uid="Super" Text="" Grid.Column="2" TextWrapping="Wrap" HorizontalAlignment="Center"
                           VerticalAlignment="Center" TextAlignment="Center"></TextBlock>
                <Image x:ConnectionId='16' x:Name="TanqueImagen"                                       Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="2"></Image>
            </Grid>
            <!--#endregion-->

            <!--#region Flechas-->
            <Image Source="Assets/Arrow.png" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Center"
                   HorizontalAlignment="Center">
                <Image.RenderTransform>
                    <CompositeTransform Rotation="90"/>
                </Image.RenderTransform>
            </Image>
            <Button x:ConnectionId='9' x:Name="ArrowLeft" Grid.Row="0" Grid.Column="0" Background="White" Height="50" VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"                         Opacity="0"></Button>
            
            <Image Source="Assets/Arrow.png" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Center"
                   HorizontalAlignment="Center" Grid.Row="0" Grid.Column="2">
                <Image.RenderTransform>
                    <CompositeTransform Rotation="-90"/>
                </Image.RenderTransform>
            </Image>
            <Button x:ConnectionId='10' x:Name="ArrowRight" Grid.Row="0" Grid.Column="2" Background="White" Height="50" VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"                          Opacity="0"></Button>
            <!--#endregion-->

            <!--#region Titulo guardados-->
            <Grid Grid.Row="2" Grid.Column="1">
                <!--#region Definitions -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!--#endregion-->

                <Border Background="#FF51BD94" BorderBrush="DarkGreen" BorderThickness="2"></Border>
                <TextBlock x:Uid="Saved" Text="" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
            </Grid>
            <!--#endregion-->

            <!--#region Guardados-->
            <ListView x:ConnectionId='11' x:Name="SavedList" Grid.Row="3" Grid.ColumnSpan="3"                                     SelectionMode="Single" IsItemClickEnabled="True"
                  ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollMode="Enabled" ScrollViewer.VerticalScrollMode="Disabled"                                >
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate x:Name="ListViewTemplate"                          >
                        <Grid x:ConnectionId='13' Margin="5, 0, 0, 0">
                            <Image x:ConnectionId='14'                          VerticalAlignment="Stretch" Margin="8, 0, 8, 0"/>
                            <Image Source="Assets/cuadrado.png" Stretch="Fill"></Image>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--#endregion-->

        </Grid>
        <!--#endregion-->

        <!--#region Panel piezas -->
        <Grid Grid.Row="1" Grid.Column ="3">
            <!--#region Definitions -->
            <Grid.RowDefinitions>
                <RowDefinition Height ="8"/>
                <RowDefinition Height ="0.8*"/>
                <RowDefinition Height ="10"/>
                <RowDefinition Height ="35"/>
                <RowDefinition Height ="2*"/>
                <RowDefinition Height ="8"/>
                <RowDefinition Height ="2*"/>
                <RowDefinition Height="12" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="6"/>
            </Grid.ColumnDefinitions>
            <!--#endregion-->

            <!--#region Colores de fondo-->
            <Border Grid.RowSpan="8" Grid.ColumnSpan="9" BorderThickness="2" BorderBrush="DarkGreen" Background="#FF51BD94"></Border>
            <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Background="#FF75DBA3" BorderThickness="2" BorderBrush="DarkGreen"></Border>
            <Border Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="5" Background="#FF75DBA3" BorderThickness="2" BorderBrush="DarkGreen"></Border>
            <Border Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="5" Background="#FF75DBA3" BorderThickness="2" BorderBrush="DarkGreen"></Border>
            <!--#endregion-->

            <TextBlock x:Uid="TankName" Text="" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center"
                       VerticalAlignment="Center" FontSize="20"></TextBlock>

            <!--#region Boton guardar -->
            <Button x:ConnectionId='3' x:Name="SaveButton" Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="3" VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"                          FontSize="20"
                    BorderBrush="DarkCyan" BorderThickness="3" Background="#FF75CFDB">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Image Source="Assets/save.png" Height="20" Margin="0,0,10,0"></Image>
                    <TextBlock x:Uid="Save" Text="" FontSize="10"/>
                </StackPanel>
            </Button>
            <!--#endregion-->

            <!--#region Botones piezas-->
            <Grid Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="3">
                <!--#region Definitions-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <!--#endregion-->

                <!--#region Colores de fondo-->
                <Border Grid.Column="0" Background="#FF75DBA3" BorderThickness="2" BorderBrush="DarkGreen"></Border>
                <Border Grid.Column="1" Background="#FF75DBA3" BorderThickness="2" BorderBrush="DarkGreen"></Border>
                <Border Grid.Column="2" Background="#FF75DBA3" BorderThickness="2" BorderBrush="DarkGreen"></Border>
                <!--#endregion-->

                <!--<Button x:Name="CanonButton" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        x:Uid="Cannon" Content="" FontSize="10" Click="CanonButton_Click"></Button>
                <Button x:Name="BlindajeButton" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        x:Uid="Armor" Content="" FontSize="10" Click="BlindajeButton_Click"></Button>
                <Button x:Name="RuedasButton" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        x:Uid="Wheels" Content="" FontSize="10" Click="RuedasButton_Click"></Button>-->
            </Grid>
            <!--#endregion-->

            <!--#region Piezas-->
            <ListView></ListView>
            <!--#endregion-->

            <!--#region Stats-->
            <Grid Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="5">
                <!--#region Definitions -->
                <Grid.RowDefinitions>
                    <RowDefinition Height ="8"/>
                    <RowDefinition Height ="*"/>
                    <RowDefinition Height ="8"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3.5*"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>
                <!--#endregion-->

                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="VIT" FontSize="13"></TextBlock>
                    <TextBlock Text="ATK" FontSize="13"></TextBlock>
                    <TextBlock Text="DEF" FontSize="13"></TextBlock>
                    <TextBlock Text="VEL" FontSize="13"></TextBlock>
                    <TextBlock Text="MOV" FontSize="13"></TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar x:ConnectionId='4' x:Name="VitBar" Width="200" Height="8" Margin="0, 0, 0, 10"                      Foreground="White"></ProgressBar>
                    <ProgressBar x:ConnectionId='5' x:Name="AtkBar" Width="200" Height="8" Margin="0, 0, 0, 10"                      Foreground="White"></ProgressBar>
                    <ProgressBar x:ConnectionId='6' x:Name="DefBar" Width="200" Height="8" Margin="0, 0, 0, 10"                      Foreground="White"></ProgressBar>
                    <ProgressBar x:ConnectionId='7' x:Name="VelBar" Width="200" Height="8" Margin="0, 0, 0, 10"                      Foreground="White"></ProgressBar>
                    <ProgressBar x:ConnectionId='8' x:Name="MovBar" Width="200" Height="8"                      Foreground="White"></ProgressBar>
                </StackPanel>
            </Grid>
            <!--#endregion-->
        </Grid>

        <!--#endregion-->
    </Grid>
</Page>

