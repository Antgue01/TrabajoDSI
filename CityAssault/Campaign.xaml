<Page
    x:Class="CityAssault.Campaign"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CityAssault"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <DataTemplate x:Key="Niveles">
            <StackPanel x:Name="ña" Orientation="Horizontal">
                <TextBlock x:Name="Id" Text="1" FontSize="20" Width="20" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Image x:Name="ImagenDueño" Width="auto" VerticalAlignment="Center" Source="Assets/Spain.png"/>
                <TextBlock x:Name="nombreDron" FontSize="12" Text="Facil" VerticalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
        
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2.15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Button Content="Button" Grid.Column="0" Margin="10,0,0,0" Height="74" Width="81" Click="Button_Back"/>

        <Button Content="Button" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="127,0,0,0" Height="98" Width="307" Click="Button_Click"/>

        <TextBlock x:Name="Descripción" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" FontSize="18" Margin="35,0,0,0" TextWrapping="Wrap" 
                   VerticalAlignment="Center" Height="143" Width="363" SelectionChanged="TextBlock_SelectionChanged">
            <Run Text="Descripción de la misión:"/><LineBreak/>
            <Run Text="Lorem ipsum dolor sit amet consectetur adipiscing elit pulvinar inceptos vestibulum, cursus ac suspendisse ornare fames phasellus praesent litora molestie potenti."/>
        </TextBlock>

        <ListView x:Name="ListadoPersonas" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                  ItemTemplate="{StaticResource Niveles}"
                  IsItemClickEnabled="true"
                  ItemClick="LevelSelected"
                  IsFocusEngagementEnabled="True"/>
    </Grid>
</Page>
