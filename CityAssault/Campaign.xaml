<Page
    x:Class="CityAssault.Campaign"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CityAssault"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <DataTemplate x:Key="Niveles" x:DataType="Image">
            <Image x:Name="ImagenDueño" Width="auto" VerticalAlignment="Center" Source="Assets/Spain.png"/>

        </DataTemplate>



    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2.15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!--#region TítuloyRecompensas -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
            <TextBlock Text="Rewards:" FontSize="25" TextAlignment="Center"/>
            <TextBlock x:Name="Rewards" Text="17/30" FontSize="25" TextAlignment="Left"/>
        </StackPanel>

        <TextBlock x:Name="Menu" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="Campaign" FontSize="30" Grid.Column="1" TextAlignment="Center"/>

        <Button Content="Back" Grid.Column="0" Margin="11,0,0,0" Height="64" Width="67" Click="Button_Back"/>
        <!--#endregion-->

        <!--#region DescripcionyBotonJugar -->
        <Button x:Name="PlayButton" Content="Play" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="127,0,0,0" Height="98" Width="307" Click="Button_Play" IsEnabled="True"/>

        <TextBlock x:Name="Descripción" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" FontSize="18" Margin="35,0,0,0" TextWrapping="Wrap" 
                   VerticalAlignment="Center" Height="143" Width="363" SelectionChanged="TextBlock_SelectionChanged">
            <Run Text="Descripción de la misión:"/><LineBreak/>
            <Run Text="Lorem ipsum dolor sit amet consectetur adipiscing elit pulvinar inceptos vestibulum, cursus ac suspendisse ornare fames phasellus praesent litora molestie potenti."/>
        </TextBlock>
        <!--#endregion-->

        <!--#region ListaDeNiveles -->
        <ListView x:Name="ListadoPersonas" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                  ItemTemplate="{StaticResource Niveles}"
                  IsItemClickEnabled="true"
                  ItemClick="LevelSelected"
                  ShowsScrollingPlaceholders="True"
                  RequestedTheme="Dark"/>
        <!--#endregion-->
    </Grid>
</Page>
